<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShowroomManagement</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .welcome-section {
            display: flex;
            align-items: center;
        }

        .welcome-section img {
            margin-left: 10px;
            border-radius: 50%;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-tools"></i> VroomVault
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item welcome-section d-flex align-items-center">
                                <span class="nav-link text-light fw-bold">Welcome, @User.Identity.Name</span>
                                <img src="@User.Claims.FirstOrDefault(c => c.Type == "Avatar")?.Value ?? "/images/default-avatar.png"" 
                                    alt="Avatar" width="40" height="40" class="ms-2 shadow-sm"
                                    onerror="this.src='/images/default-avatar.png'" />
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-light btn-sm nav-link text-dark fw-bold ms-3">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-light btn-sm text-dark nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                        @* @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-3">
                                <a class="btn btn-warning btn-sm nav-link fw-bold" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                            </li>
                        } *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row flex-nowrap">
            <!-- Sidebar -->
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark shadow-sm">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <i class="bi bi-menu-button-wide fs-4"></i>
                        <span class="fs-5 ms-2 fw-bold">Menu</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="/" class="nav-link align-middle px-0 text-white">
                                <i class="bi bi-house-door-fill fs-5"></i> <span class="ms-2">Home</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Order" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-basket-fill fs-5"></i> <span class="ms-2">Manage Orders</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Customer" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-people-fill fs-5"></i> <span class="ms-2">Manage Customers</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Vehicle" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-truck fs-5"></i> <span class="ms-2">Manage Vehicles</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Setting" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-gear-fill fs-5"></i> <span class="ms-2">Settings</span>
                            </a>
                        </li>
                        <li>
                            <a href="/VehicleRegistration" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-card-checklist fs-5"></i> <span class="ms-2">Vehicle Registrations</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>


            <!-- Main Content -->
            <div class="col py-3">
                <!-- Display success and error messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert" id="successMessage">
                        @TempData["SuccessMessage"]
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="errorMessage">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted bg-light py-3">
        <div class="container text-center">
            &copy; 2024 - ShowroomManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-primary">Privacy</a>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript to hide the success or error message after 3 seconds -->
    <script type="text/javascript">
        setTimeout(function () {
            var successMessage = document.getElementById("successMessage");
            var errorMessage = document.getElementById("errorMessage");
            if (successMessage) {
                successMessage.style.display = "none";
            }
            if (errorMessage) {
                errorMessage.style.display = "none";
            }
        }, 3000); // 3000 ms = 3 seconds
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
